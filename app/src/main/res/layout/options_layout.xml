<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@android:color/white"
                android:hapticFeedbackEnabled="true"
                android:orientation="vertical"
                android:theme="@android:style/Theme.Translucent">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <thegroup.snakego.elements.SnakeTextView
            android:id="@+id/options_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/options"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"/>

        <thegroup.snakego.elements.SnakeTextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/black"
            android:textColor="@android:color/darker_gray"
            android:text="Hey, "
            android:textSize="24sp"/>

        <thegroup.snakego.elements.SnakeTextView
            android:id="@+id/your_score_text"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_alignLeft="@+id/resume_game_text"
            android:layout_alignStart="@+id/resume_game_text"
            android:layout_below="@+id/user_name"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="0.07"
            android:textColor="@android:color/holo_green_light"
            android:textSize="24sp"/>

        <thegroup.snakego.elements.SnakeTextView
            android:id="@+id/high_scores_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resume_game_text"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/h_scores"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"/>

        <thegroup.snakego.elements.SnakeTextView
            android:id="@+id/resume_game_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/your_score_text"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/resume"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"/>

        <thegroup.snakego.elements.SnakeTextView
            android:id="@+id/snakego_poetry_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resume_game_text"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/holo_green_light"
            android:text="Snake Poetry"
            android:textSize="30sp"/>

        <thegroup.snakego.elements.SnakeTextView
            android:id="@+id/quit_game_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/snakego_poetry_text"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/quit"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp"/>



    </LinearLayout>

</RelativeLayout>