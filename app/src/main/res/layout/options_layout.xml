<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
    android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
    android:theme="@android:style/Theme.Translucent"
    android:hapticFeedbackEnabled="true"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout1"
        android:background="@android:color/black">

        <thegroup.snakego.utils.SnakeTypeface
            android:text="@string/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/options_page_text"
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="150dp"/>

        <thegroup.snakego.utils.SnakeTypeface
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"
            android:id="@+id/your_score_text"
            android:layout_below="@+id/options_page_text"
            android:layout_alignLeft="@+id/resume_game_text"
            android:layout_alignStart="@+id/resume_game_text"
            android:layout_weight="0.07" />

        <thegroup.snakego.utils.SnakeTypeface
            android:text="@string/h_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resume_game_text"
            android:textSize="30sp"
            android:id="@+id/high_scores_text"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/holo_green_light"/>

        <thegroup.snakego.utils.SnakeTypeface
            android:text="@string/resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"
            android:id="@+id/resume_game_text"
            android:layout_below="@+id/your_score_text"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

        <thegroup.snakego.utils.SnakeTypeface
            android:text="@string/quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/high_scores_text"
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/quit_game_text"/>

    </LinearLayout>

</RelativeLayout>